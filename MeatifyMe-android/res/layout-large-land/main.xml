<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/btnNiveis"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnCampanha"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
             android:background="@drawable/btn_dlc"
            android:text="@string/strBtnNiveis" />

        <TextView
            android:id="@+id/lblMainmenuDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="164dp"
            android:text="@string/lblMainMenuDescription"
            android:textAppearance="?android:attr/textAppearanceLarge" 
            android:textColor="#000000"/>

        <Button
            android:id="@+id/btnCampanha"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
             android:background="@drawable/btn_campaign"
            android:text="@string/strBtnCampanha" />

        <CheckBox
            android:id="@+id/checkSound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnNiveis"
            android:layout_toRightOf="@+id/btnCampanha"
            android:checked="true"
            android:text="@string/checkboxTextSound" 
            android:textColor="#000000"/>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btnCampanha"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="14dp"
            android:scaleType="center"
            android:src="@drawable/banner" />
    </RelativeLayout>

</LinearLayout>