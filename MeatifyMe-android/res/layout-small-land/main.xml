<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/btnNiveis"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnCampanha"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="@string/strBtnNiveis" />

        <CheckBox
            android:id="@+id/checkSound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnNiveis"
            android:layout_toRightOf="@+id/btnCampanha"
            android:checked="true"
            android:text="@string/checkboxTextSound" 
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/lblMainmenuDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:gravity="center_horizontal"
            android:text="@string/lblMainMenuDescription"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000000" />

        <Button
            android:id="@+id/btnCampanha"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblMainmenuDescription"
            android:layout_centerHorizontal="true"
            android:text="@string/strBtnCampanha" />

    </RelativeLayout>

</LinearLayout>